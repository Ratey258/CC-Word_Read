{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ]
}

